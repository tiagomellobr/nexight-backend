# Arquivo de exemplo das variáveis de ambiente
# Copie este arquivo para .env e ajuste os valores conforme necessário

# =================================
# CONFIGURAÇÕES DO SERVIDOR
# =================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8005
RUST_LOG=info
RUST_BACKTRACE=1

# =================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# =================================
DATABASE_URL=postgresql://nexight:nexight123@localhost:5432/nexight_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=nexight_db
DATABASE_USER=nexight
DATABASE_PASSWORD=nexight123
DATABASE_MAX_CONNECTIONS=10

# =================================
# CONFIGURAÇÕES DO REDIS
# =================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =================================
# CONFIGURAÇÕES DE AUTENTICAÇÃO
# =================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=86400  # 24 horas em segundos
TOKEN_EXPIRATION_HOURS=24  # Expiração do token em horas
REFRESH_TOKEN_EXPIRATION=2592000  # 30 dias em segundos

# =================================
# CONFIGURAÇÕES DE HASH DE SENHA
# =================================
ARGON2_SALT_LENGTH=32
ARGON2_HASH_LENGTH=32
ARGON2_ITERATIONS=3
ARGON2_MEMORY_SIZE=4096
ARGON2_PARALLELISM=1

# =================================
# CONFIGURAÇÕES DE CORS
# =================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8005
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_MAX_AGE=3600

# =================================
# CONFIGURAÇÕES DE RATE LIMITING
# =================================
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# =================================
# CONFIGURAÇÕES DE EMAIL (OPCIONAL)
# =================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=Nexight
SMTP_FROM_EMAIL=noreply@nexight.com

# =================================
# CONFIGURAÇÕES DE LOGS
# =================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/nexight-backend.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# =================================
# CONFIGURAÇÕES DE AMBIENTE
# =================================
ENVIRONMENT=development  # development, staging, production

# =================================
# CONFIGURAÇÕES DE BACKUP
# =================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Todos os dias às 2h da manhã
BACKUP_RETENTION_DAYS=30

# =================================
# CONFIGURAÇÕES DE MONITORAMENTO
# =================================
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30